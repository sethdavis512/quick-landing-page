---
interface Props {
  href?: string;
  variant?: "primary" | "secondary";
  class?: string;
}

const { href, variant = "primary", class: className } = Astro.props;
const Element = href ? "a" : "button";

const baseClasses = "inline-block px-6 py-3 rounded-md font-semibold no-underline cursor-pointer border-none text-base transition-opacity duration-200 hover:opacity-85";
const variantClasses = {
  primary: "bg-[var(--color-accent)] text-white",
  secondary: "bg-[var(--color-surface)] text-[var(--color-charcoal,var(--color-light,#1f2937))]",
};
---

<Element
  href={href}
  class:list={[baseClasses, variantClasses[variant], className]}
>
  <slot />
</Element>
