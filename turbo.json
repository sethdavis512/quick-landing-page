{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "preview": {
      "dependsOn": ["build"]
    }
  },
  "globalEnv": ["LANDING_*", "PUBLIC_*", "DATABASE_URL", "PORT"]
}
